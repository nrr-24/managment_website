rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isManager() {
      return request.auth != null
        && exists(/databases/$(database)/documents/managers/$(request.auth.uid))
        && get(/databases/$(database)/documents/managers/$(request.auth.uid)).data.active == true;
    }

    // Managers table
    match /managers/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false; // lock it; edit via console only
    }

    // Public read for app (optional)
    match /restaurants/{restaurantId} {
      allow read: if true;
      allow write: if isManager();

      match /categories/{categoryId} {
        allow read: if true;
        allow write: if isManager();

        match /dishes/{dishId} {
          allow read: if true;
          allow write: if isManager();
        }
      }
    }
  }
}
