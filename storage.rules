rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isManager() {
      return request.auth != null
        && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "manager";
    }

    // Restaurant logos and backgrounds: restaurants/{rID}/logo_{uuid}.png, background_{uuid}.jpg
    match /restaurants/{restaurantId}/{fileName} {
      allow read: if true;
      allow write: if isManager();
    }

    // Category icons: restaurants/{rID}/categories/{cID}/icon.jpg
    match /restaurants/{restaurantId}/categories/{categoryId}/{fileName} {
      allow read: if true;
      allow write: if isManager();
    }

    // Dish images: dishes/{rID}/{cID}/{dishID}/{batchID}_{index}.jpg
    match /dishes/{restaurantId}/{categoryId}/{dishId}/{fileName} {
      allow read: if true;
      allow write: if isManager();
    }

    // User backgrounds: users/{uid}/background_{uuid}.jpg
    match /users/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
